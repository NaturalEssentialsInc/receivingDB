<h2>New Entry</h2>

<div>
  <form>
    <div class="form-row flex-right">
      <div class="form-group">
        <input
          aria-labelledby="date-label"
          id="date"
          name="date"
          type="date"
          value="{{dateNowInput}}"
        />
        <label for="date" id="date-label">Date</label>
      </div>      
      <div class="form-group">
        <input
          aria-labelledby="time-label"
          id="time"
          name="time"
          type="time"
          value="{{timeNowInput}}"
        />
        <label for="time" id="time-label">Time</label>
      </div>
    </div>
  </form>
</div>
